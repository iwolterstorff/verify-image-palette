{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "source-map-support": ["node_modules/*"], 
            "*": ["types/*"] 
        },
        "outDir": "./dist",
        "declaration": true,
        "allowJs": false,
        "target": "es6",
        "module": "commonjs",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ]
}